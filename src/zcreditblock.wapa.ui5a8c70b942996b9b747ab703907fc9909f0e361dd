sap.ui.define([], function () {                                                                                                                                                                                                                                
	"use strict";                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
	return {                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
		/**                                                                                                                                                                                                                                                          
		 * Rounds the number unit value to 2 digits                                                                                                                                                                                                                  
		 * @public                                                                                                                                                                                                                                                   
		 * @param {string} sValue the number string to be rounded                                                                                                                                                                                                    
		 * @returns {string} sValue with 2 digits rounded                                                                                                                                                                                                            
		 */                                                                                                                                                                                                                                                          
		numberUnit: function (sValue) {                                                                                                                                                                                                                              
			if (!sValue) {                                                                                                                                                                                                                                              
				return "";                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
			return parseFloat(sValue).toFixed(2);                                                                                                                                                                                                                       
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		oNumberFormat: function (data) {                                                                                                                                                                                                                             
			var oLocale = new sap.ui.core.Locale("en-US");                                                                                                                                                                                                              
			var oFormatOptions = {                                                                                                                                                                                                                                      
				style: "short",                                                                                                                                                                                                                                            
				shortLimit: 10000,                                                                                                                                                                                                                                         
				showScale: true,                                                                                                                                                                                                                                           
				shortDecimals: 2                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			};                                                                                                                                                                                                                                                          
			var oFloatFormat = sap.ui.core.format.NumberFormat.getFloatInstance(oFormatOptions, oLocale);                                                                                                                                                               
			var oNumber = oFloatFormat.format(data);                                                                                                                                                                                                                    
			return oNumber;                                                                                                                                                                                                                                             
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		highlightTxt: function (num) {                                                                                                                                                                                                                               
			if (num === "*") {                                                                                                                                                                                                                                          
				return "Indication03";                                                                                                                                                                                                                                     
			} else {                                                                                                                                                                                                                                                    
				return "None";                                                                                                                                                                                                                                             
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		riskCatMet: function (rsk) {                                                                                                                                                                                                                                 
			var oStatInd;                                                                                                                                                                                                                                               
			switch (rsk) {                                                                                                                                                                                                                                              
			case "1":                                                                                                                                                                                                                                                   
				oStatInd = "Indication05";                                                                                                                                                                                                                                 
				break;                                                                                                                                                                                                                                                     
			case "2":                                                                                                                                                                                                                                                   
				oStatInd = "Indication04";                                                                                                                                                                                                                                 
				break;                                                                                                                                                                                                                                                     
			case "3":                                                                                                                                                                                                                                                   
				oStatInd = "Indication03";                                                                                                                                                                                                                                 
				break;                                                                                                                                                                                                                                                     
			case "4":                                                                                                                                                                                                                                                   
				oStatInd = "Indication02";                                                                                                                                                                                                                                 
				break;                                                                                                                                                                                                                                                     
			case "5":                                                                                                                                                                                                                                                   
				oStatInd = "Indication01";                                                                                                                                                                                                                                 
				break;                                                                                                                                                                                                                                                     
			default:                                                                                                                                                                                                                                                    
				oStatInd = "None";                                                                                                                                                                                                                                         
			}                                                                                                                                                                                                                                                           
			return oStatInd;                                                                                                                                                                                                                                            
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
	};                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               
});                                                                                                                                                                                                                                                            