<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"                                                                                                                      
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.data="sap.viz.ui5.data" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"                                                                                                                                        
	xmlns:unified="sap.ui.unified" xmlns:semantic="sap.m.semantic" controllerName="fiori.controller.epicscreen"                                                                                                                                                   
	xmlns:html="http://www.w3.org/1999/xhtml">                                                                                                                                                                                                                    
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="Epics Search with Filter" navButtonPress="Back3" showNavButton="true">                                                                                                                                                                         
				<content>                                                                                                                                                                                                                                                  
					<Image src="/Wileylogo.GIF" height="60px" width="250px"/>                                                                                                                                                                                                 
					<Panel headerText="Selection Criteria" expandable="true" expanded="false" backgroundDesign="Transparent">                                                                                                                                                 
						<layout:Grid>                                                                                                                                                                                                                                            
							<!--<Label text="Start Date" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>-->                                                                                                                                                    
							<!--<DatePicker id="startdate" dateValue="" width="250px" textAlign="Center"/>-->                                                                                                                                                                       
							<!--<Label text="End Date" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>-->                                                                                                                                                      
							<!--<DatePicker id="enddate" dateValue="" width="250px" textAlign="Center"/>-->                                                                                                                                                                         
							<Label text="#CR" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>                                                                                                                                                                  
							<MultiComboBox id="CR" items="{/CHQVALUESet}" width="250px">                                                                                                                                                                                            
								<core:Item text="{Chgreq}"/>                                                                                                                                                                                                                           
							</MultiComboBox>                                                                                                                                                                                                                                        
							<Label text="#JIRA" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>                                                                                                                                                                
							<MultiComboBox id="jira" items="{/EPICVALUESet}" width="250px">                                                                                                                                                                                         
								<core:Item text="{Epic}"/>                                                                                                                                                                                                                             
							</MultiComboBox>                                                                                                                                                                                                                                        
							<Label text="#Sprint" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>                                                                                                                                                              
							<MultiComboBox id="Sprint" items="{/SPRINTVALUESet}" width="250px">                                                                                                                                                                                     
								<core:Item text="{Sprint}"/>                                                                                                                                                                                                                           
							</MultiComboBox>                                                                                                                                                                                                                                        
							<Label text="" width="500px" textAlign="Center" textDirection="RTL" design="Bold"/>                                                                                                                                                                     
							<Button text="Get" type="Emphasized" textDirection="Inherit" width="250px" press="GET4EH"/>                                                                                                                                                             
						</layout:Grid>                                                                                                                                                                                                                                           
					</Panel>                                                                                                                                                                                                                                                  
					<HBox>                                                                                                                                                                                                                                                    
						<Button text="Get Transports" id="Nextlevel" type="Emphasized" width="200px" textDirection="LTR" press="nextTREH" visible="true"/>                                                                                                                       
					</HBox>                                                                                                                                                                                                                                                   
					<!--<form:SimpleForm id="mysimpleform1" layout="ResponsiveGridLayout">-->                                                                                                                                                                                 
					<ScrollContainer focusable="true"  vertical='true'>                                                                                                                                                                                                       
						<Table id="sprinttable2" items="{SPRINT2>/results}" fixedLayout="false" headerText="Epics Search with Filter Report" mode="MultiSelect"                                                                                                                  
							selectionChange="selectEH" updateFinished="totalrecordsEH" growing="true" growingThreshold="15"  >                                                                                                                                                      
							<columns>                                                                                                                                                                                                                                               
								<!--<Column>-->                                                                                                                                                                                                                                        
								<!--	<Label text="Selection" textDirection="Inherit" design="Bold"/>-->                                                                                                                                                                                
								<!--</Column>-->                                                                                                                                                                                                                                       
								<Column>                                                                                                                                                                                                                                               
									<Label text="EPIC" textDirection="Inherit" design="Bold"/>                                                                                                                                                                                            
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Label text="Description" textDirection="Inherit" design="Bold"/>                                                                                                                                                                                     
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Label text="Teams" textDirection="Inherit" design="Bold"/>                                                                                                                                                                                           
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Label text="Sprint" textDirection="Inherit" design="Bold"/>                                                                                                                                                                                          
								</Column>                                                                                                                                                                                                                                              
								<Column>                                                                                                                                                                                                                                               
									<Label text="Change Request" textDirection="Inherit" design="Bold"/>                                                                                                                                                                                  
								</Column>                                                                                                                                                                                                                                              
							</columns>                                                                                                                                                                                                                                              
							<items>                                                                                                                                                                                                                                                 
								<ColumnListItem>                                                                                                                                                                                                                                       
									<cells>                                                                                                                                                                                                                                               
										<!--<CheckBox text="" select="selectEH" />-->                                                                                                                                                                                                        
										<Text text="{SPRINT2>Epic}"/>                                                                                                                                                                                                                        
										<Text text="{SPRINT2>Des}"/>                                                                                                                                                                                                                         
										<Text text="{SPRINT2>Teams}"/>                                                                                                                                                                                                                       
										<Text text="{SPRINT2>Sprint}" width="100px"/>                                                                                                                                                                                                        
										<Text text="{SPRINT2>Chgreq}" width="100px"/>                                                                                                                                                                                                        
									</cells>                                                                                                                                                                                                                                              
								</ColumnListItem>                                                                                                                                                                                                                                      
							</items>                                                                                                                                                                                                                                                
						</Table>                                                                                                                                                                                                                                                 
					</ScrollContainer>                                                                                                                                                                                                                                        
					<!--</form:SimpleForm>-->                                                                                                                                                                                                                                 
					<!--<layout:Grid>-->                                                                                                                                                                                                                                      
					<!--	<content>-->                                                                                                                                                                                                                                         
					<!--		<Label text="Start Date" textDirection="RTL" design="Bold"/>-->                                                                                                                                                                                     
					<!--		<DatePicker dateValue="" width=250px/>-->                                                                                                                                                                                                           
					<!--	</content>-->                                                                                                                                                                                                                                        
					<!--</layout:Grid>-->                                                                                                                                                                                                                                     
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    