     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZQTC_PROD_GROUP WHERE
  PROD_GROUP = ZQTCV_PROD_GROUP-PROD_GROUP .
    IF SY-SUBRC = 0.
    DELETE ZQTC_PROD_GROUP .
    ENDIF.
    DELETE FROM ZQTCT_PROD_GROUP WHERE
    PROD_GROUP = ZQTC_PROD_GROUP-PROD_GROUP .
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZQTC_PROD_GROUP WHERE
  PROD_GROUP = ZQTCV_PROD_GROUP-PROD_GROUP .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZQTC_PROD_GROUP.
    ENDIF.
ZQTC_PROD_GROUP-MANDT =
ZQTCV_PROD_GROUP-MANDT .
ZQTC_PROD_GROUP-PROD_GROUP =
ZQTCV_PROD_GROUP-PROD_GROUP .
    IF SY-SUBRC = 0.
    UPDATE ZQTC_PROD_GROUP .
    ELSE.
    INSERT ZQTC_PROD_GROUP .
    ENDIF.
    SELECT SINGLE FOR UPDATE * FROM ZQTCT_PROD_GROUP WHERE
    PROD_GROUP = ZQTC_PROD_GROUP-PROD_GROUP AND
    SPRAS = SY-LANGU .
      IF SY-SUBRC <> 0.   "insert preprocessing: init WA
        CLEAR ZQTCT_PROD_GROUP.
ZQTCT_PROD_GROUP-PROD_GROUP =
ZQTC_PROD_GROUP-PROD_GROUP .
ZQTCT_PROD_GROUP-SPRAS =
SY-LANGU .
      ENDIF.
ZQTCT_PROD_GROUP-PROD_GROUP_D =
ZQTCV_PROD_GROUP-PROD_GROUP_D .
    IF SY-SUBRC = 0.
    UPDATE ZQTCT_PROD_GROUP .
    ELSE.
    INSERT ZQTCT_PROD_GROUP .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
